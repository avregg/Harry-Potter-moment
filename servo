//FIRST INTERACTION.......................................

Servo letterServo;  //servo object
const int switchPin = 2;
const int servoPin = 9;

void setup() {
  pinMode(switchPin, INPUT);
  letterServo.attach(servoPin);
  letterServo.write(0); //start position (closed)
}

void loop() {
  int switchState = digitalRead(switchPin);
//triggered, drop the letters

  letterServo.write(90); //adjust angle to release compartments
  delay(1000); //wait for letters to fall
  letterServo.write(0); //return to start
hasDropped = true; //so it doesn't repeat
  }
} 
